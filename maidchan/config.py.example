# -*- coding: utf-8 -*-

# Facebook token
ACCESS_TOKEN = "FACEBOOK_PAGE_ACCESS_TOKEN"
VERIFY_TOKEN = "WEBHOOK_VERIFY_TOKEN"  # Set this value by yourself

# Recipient ID for Admin, hardcoded in configuration
ADMIN = [
    "123...9"
]

# Chatbot storage adapter
# Chatterbot has dropped support for JsonFileStorageAdapter
# Therefore, this tutorial assumes we are using MongoDB
# If you want to use the default SQLite database, specify "chatterbot.storage.SQLStorageAdapter"
# See http://chatterbot.readthedocs.io/en/stable/storage/index.html
STORAGE_ADAPTER = "chatterbot.storage.MongoDatabaseAdapter"

# To enable / disable chatbot feature
# Hence removing SQLite or MongoDB requirements for initial testing
IS_CHATTERBOT_ENABLED = True
